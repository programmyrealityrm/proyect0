#ejercicio 1.1 (Operaciones aritmetricas)
#promedio de duraciones
tiempo_curso_dalto = 1.5 
tiempo_curso_minimo = 2.5
tiempo_curso_promedio = 4
tiempo_curso_maximo = 7

#tiempos crudos y despues editados
tiempo_crudo_cursos = 5
tiempo_crudo_dalto = 3.5


#diferencias de duracion
diferencia_con_minimo = 100 - tiempo_curso_dalto / tiempo_curso_minimo * 100
diferencia_con_maximo = 100 - tiempo_curso_dalto / tiempo_curso_maximo /100
diferencia_con_promedio = 100 - tiempo_curso_dalto / tiempo_curso_promedio * 100

#calculando el porcentaje de material inservible qie se reduce en: 
tiempo_vacio_promedio = 100 - tiempo_curso_promedio *1000 // tiempo_crudo_cursos /10
tiempo_vacio_dalto = 100 - tiempo_curso_dalto *1000 // tiempo_crudo_dalto /10
#mostrando la derencia de duracion ejercicio A
print("------------------------------------")
print(f"el tiempo de este curso dura un {diferencia_con_minimo}% menos que el curso minimo ")
print(f"el tiempo de este curso dura un {diferencia_con_maximo}% menos que el curso maximo ")
print(f"el tiempo de este curso dura un {diferencia_con_promedio}% menos que el curso promedio ")
print("------------------------------------")

#mostrando la cantidad de espacios vacios que se remueven ejercicio B
print("------------------------------------")
print(f"un curso promedio elimina un {tiempo_vacio_promedio}% de tiempo vacio")
print(f"este curso elimino el {tiempo_vacio_dalto}% de tiempo vacio")
print("------------------------------------")

#mostrando diferencias y los otros cursos duraran 10h 
print("------------------------------------")
print(f"ver 10h de este curso equivalen a ver {tiempo_curso_promedio *1000 // tiempo_curso_dalto / 100} horas de otros cursos")

#ejercicio 1.2 (utilizando input, metodos de cadena, operaciones aritmetricas y condicionales)
#teniendo encuenta que la persona dice 2 palabras por 1 segundo y dalto lo dice un 30% mas rapido
#le pedimos al usuario la frase para calcular
frase = input("Digamme un frase para calcular cuanto tardarias en decirlo: ")
print("--------------------------------------------------")
#metodo cadena para separar 
palabras_separadas = frase.split(" ")
#metodo lista para contar las palabras anterior mente separadas
cantidad_de_palabras = len(palabras_separadas)
#manera de imprimir el resultado 
print(f"dijiste {cantidad_de_palabras} de palabras, y tardarias {cantidad_de_palabras/2:.1f} segundos en decrilo")
print("--------------------------------------------------")
print(f"dalto lo diria {cantidad_de_palabras} palabras en {cantidad_de_palabras/2.3:.1f} segundos ")
print("--------------------------------------------------")
#condicionamiento para ejecutar una accion 
if cantidad_de_palabras > 120:
    print("para falco, no me digas ese testamento")
else: 
    print("hablas rapido che")

#ejecicio 1.3 (utilizando input, funciones, condicionales y operaciones comparativas)
ingreso_mensual = int(input("digite su ingreso mensual porfavor:"))

if ingreso_mensual > 10000:    #si se cumple esta condicion se activa el primer codigo if (primera condicon)
    print("Estas bien en cualquier parte del mundo")

elif ingreso_mensual > 1000:
    print("podes vivir en latinoamirica")  #si no se cumple la primera condicion se activa elif (sino se activa la primera miraremos si cumple con esta, y si no cumple, si hay mas sigue con mas condiciones, si las hay, sino no)

elif ingreso_mensual > 500:
    print("podes vivir en argentina")
    
elif ingreso_mensual > 200:
    print("podes vivir en venezuela")
#si el ingreso_mensual es mayor que los 2 codigos, el if y elif es para que si los 2 cunmplen con la condicion
#no se colocen los 2 codigos, sino priorice el primer codigo, osea if (primer codigo)
else:
    print("sos pobre")  #si ninguna de las condiciones se complieron entonces se activa este codigo de else (de lo contrario)

#ejecicio 1.4 (utilizando input, condicionales)
contraseña_registrada = "carlos"
contraseña_ingresada = input("ingrese la contraseña porfavor: ")

#si se ingresa bien la contraseña registrada el programa ejecutara el primer codigo (if), pero si se escribe una contraseña incorrecta se ejecutara el otro codigo (else).
if contraseña_registrada == contraseña_ingresada:
    print("¡¡Bienvenido de nuevo, un gusto verlo!!")
else:
    print("¡¡intruso, no puede ingresar!!")

#ejemplo 2 

if contraseña_registrada == contraseña_ingresada:
    print("¡¡Bienvenido de nuevo, un gusto verlo!!")
if contraseña_registrada != contraseña_ingresada:
    print("contraseña incorrecta")
    print("intente de nuevo")

#ejecicio 1.5 (utilizando input, metodos de listas, y bucles for)
asignaturas = ["Matemáticas", "Física", "Química", "Historia", "Lengua"]
notas = list([])

for asignatura in asignaturas:
    print("-----------------------------------")
    nota = input(F"cuanto sacaste en {asignatura}:")
    notas.append(nota)
for i in range(len(asignaturas)):
    print("----------------------------------------")
    print(f"En {asignaturas[i]} saco: {notas[i]}")

#ejercicios 1.6 (creando funciones)

#1.6.1
def saludar(nombre, sexo ):
    sexo = sexo.lower()
    if sexo == "mujer":
        adjetivo = "profesora"
    elif sexo == "hombre":
        adjetivo = "profesor"
    else:
        adjetivo = "amor"
    print(f"hola {nombre}, mi {adjetivo} como estas")
    
saludar("camila", "mujer")
saludar("raul", "hombre")
saludar("daniela", "no binario")

#1.6.2
def crear_contraseña_random(num):
    chars = "abcdefghij"
    num_entero = str(num)  #esto es para comvertir el numero a texto, para despues solo tomar el primer numero y volverloa convertir en numero con la fucnion int()
    num = int(num_entero[0])
    c1 = num - 2
    c2 = num
    c3 = num - 5
    contraseña = f"{chars[c1]}{chars[c2]}{chars[c3]}{num*2}"
    print(contraseña)

crear_contraseña_random(1)

    














